{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      { "source": "/rss", "destination": "/rss.xml", "type": 301 },
      { "source": "/feed", "destination": "/feed.json", "type": 301 },
      { "source": "/sitemap", "destination": "/sitemap.xml", "type": 301 },
      { "source": "/index.html", "destination": "/", "type": 301 }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "/favicon.ico",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "/robots.txt",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,s-maxage=3600,stale-while-revalidate=86400"
          }
        ]
      },
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,s-maxage=3600,stale-while-revalidate=86400"
          }
        ]
      },
      {
        "source": "/rss.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,s-maxage=3600,stale-while-revalidate=86400"
          }
        ]
      },
      {
        "source": "/feed.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,s-maxage=3600,stale-while-revalidate=86400"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,s-maxage=600,stale-while-revalidate=86400"
          }
        ]
      }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
